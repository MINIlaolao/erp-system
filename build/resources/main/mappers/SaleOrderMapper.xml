    <select id="selectOne" parameterType="java.lang.String" resultMap="SaleOrder">
        SELECT `id`,
               `client_id`,
               `salesman`,
               `count_price`,
               `handling_charge`,
               `deposit`,
               `other_price`,
               `remark`,
               `pay_money_date`,
               `date`,
               `disabled`
        FROM `hkpsi_sale_order`
        WHERE id = #{id,jdbcType=BIGINT}
        LIMIT 1
    </select>
